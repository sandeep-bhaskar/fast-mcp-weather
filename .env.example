# OpenWeatherMap API Configuration
# =================================
# Copy this file to .env and add your API key

# API Key (required) - Get from https://openweathermap.org/api_keys
API_KEY=e1549ae776638792c28052a7856357c5

# API URLs
BASE_URL=https://api.openweathermap.org/data/2.5
GEO_URL=https://api.openweathermap.org/geo/1.0

# Default Settings
DEFAULT_UNITS=metric  # Options: metric, imperial, standard
DEFAULT_LANG=en       # Language code for weather descriptions

# Cache Settings
CACHE_TTL=600  # Cache time-to-live in seconds (10 minutes)

# Server Settings
SERVER_NAME=OpenWeatherMap MCP Server
LOG_LEVEL=INFO

# Rate Limiting
MAX_DAILY_CALLS=1000  # Free tier limit

# Transport (for deployment)
TRANSPORT=stdio  # Options: stdio, http
# PORT=8000      # For HTTP transport